@model BasketRequestModel

@{
    ViewData["Title"] = "Basket";
}

<h2>Basket</h2>

@if (Model != null && Model.BasketItems != null && Model.BasketItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Id
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BasketItems)
            {
                <tr>
                    <td>
                        @item.ProductId
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        <a asp-action="RemoveItem" asp-route-userId="@Model.UserId" asp-route-productId="@item.ProductId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Checkout" asp-route-userId="@Model.UserId">Checkout</a>
    </div>
}
else
{
    <p>Your basket is empty.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
