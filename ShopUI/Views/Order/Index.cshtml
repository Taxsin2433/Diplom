@model List<OrderListModel>

@{
    ViewData["Title"] = "Order";
}

<h2>Order</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Order Id
                </th>
                <th>
                    User Id
                </th>
                <th>
                    Status
                </th>
                <th>
                    Total Amount
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        @order.OrderId
                    </td>
                    <td>
                        @order.UserId
                    </td>
                    <td>
                        @order.Status
                    </td>
                    <td>
                        @order.TotalAmount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
